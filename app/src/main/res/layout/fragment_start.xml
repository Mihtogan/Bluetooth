<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".models.StartFragment">

    <Button
        android:id="@+id/butDevicesListFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/butGoFragmentDevicesList"
        app:layout_constraintBottom_toTopOf="@id/butRxTxFragment"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/main_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butRxTxFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_text"
        android:text="@string/butGoFragmentRxTx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butDevicesListFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>